<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gaggle.givr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LandingPage"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".LocationListPage"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".LocationItemPage" />
        <activity android:name=".ItemPage" />
        <activity
            android:name=".ItemListPage"
            android:label="@string/title_activity_item_list_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddItemPage"
            android:label="@string/title_activity_add_item_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemSearchActivity"
            android:label="@string/title_activity_item_search"></activity>
    </application>

</manifest>